---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={typeof date === 'string' ? date : date.toISOString()}>
  {
    typeof date === 'string'
      ? date
      : date.toLocaleDateString('en-us', {
          year: 'numeric',
          month: 'short',
          timeZone: 'UTC'
        })
  }
</time>
